<h1>Pets</h1>

<% @pets.each do |pet| %>
  <img src=<%= pet.image %> ></img>
  <h4>Name:</h4>
  <%= pet.name %>
  <h4>Approximate Age:</h4>
  <%= pet.age %>
  <h4>Sex:</h4>
  <%= pet.sex %>
  <h4>Shelter:</h4>
  <%= pet.shelter.name %>
  <h4>Shelter: <a href="/shelters/<%= pet.shelter.id %>"><%= pet.shelter.name %></a><h4>
  <br/>
  <br/>
  <br/>
<% end %>
